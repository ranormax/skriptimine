echo "Ranor-Max Kivirahk, delete skript, otsi faili nime jargi ja kustuta see"
file=$1
if [[ -f $file ]]; then
read -p "fail $file leitud. kas tahate selle kustutada? [y/n] " delete
if [[ $delete == [yY] ]]; then #ainult kustuta fail kui vajutatakse y klahvile
